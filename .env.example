# Flask Configuration
SECRET_KEY=MUDE-ESTA-CHAVE-EM-PRODUCAO-use-algo-aleatorio-e-complexo
FLASK_ENV=production
FLASK_DEBUG=False

# Database - SQLite (padrão)
